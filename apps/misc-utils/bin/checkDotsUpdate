#!/usr/bin/env sh
set -eu

pushd () {
  command pushd "$@" > /dev/null
}
popd () {
  command popd "$@" > /dev/null
}

LOCAL=$(git rev-parse @)
REMOTE=$(git rev-parse @{u})
BASE=$(git merge-base @ @{u})

pushd $HOME/.dotfiles

if [ $LOCAL = $REMOTE ]; then
    echo "dotfiles are up-to-date"
elif [ $LOCAL = $BASE ]; then
    echo "dotfiles are behind. Attempting to pull."
    git pull
elif [ $REMOTE = $BASE ]; then
    echo "dotfiles are ahead. Please rebase if needed and push."
else
    echo "dotfiles have diverged. You are on your own."
fi

popd
