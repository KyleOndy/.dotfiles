defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account personal
host mail.ondy.me
port 587
protocol smtp
from kyle@ondy.me
user kyle@ondy.me
passwordeval "pass show mail.ondy.me/kyle@ondy.me"

account gmail
host smtp.gmail.com
port 587
from kyleondy@gmail.com
user kyleondy
passwordeval "pass show mbsync/kyleondy@gmail.com"

account default: personal
