# vim: ft=muttrc
application/octet-stream ; echo %s "can be anything..."
text/html                ; lynx %s
application/pdf          ; /usr/bin/zathura %s
image/*                  ; /usr/bin/feh %s
audio/*                  ; /usr/bin/mpv %s
video/*                  ; /usr/bin/mpv %s
text/plain               ; cat %s                       ; copiousoutput
text/x-diff              ; vim -R %s
text/x-patch             ; vim -R %s
